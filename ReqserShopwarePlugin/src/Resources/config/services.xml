<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Reqser\Plugin\Service\ScheduledTask\ReqserSnippetCrawler">
            <tag name="shopware.scheduled.task" />
        </service>
        <service id="Reqser\Plugin\Service\ScheduledTask\ReqserSnippetCrawlerHandler" public="true">
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="logger"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="service_container"/>
            <argument type="service" id="Shopware\Core\Framework\App\ShopId\ShopIdProvider"/>
            <tag name="messenger.message_handler" />
        </service>

        <service id="Reqser\Plugin\Service\ScheduledTask\ReqserNotificiationRemoval">
            <tag name="shopware.scheduled.task" />
        </service>
        <service id="Reqser\Plugin\Service\ScheduledTask\ReqserNotificiationRemovalHandler" public="true">
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="logger"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="Reqser\Plugin\Service\ReqserNotificationService" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserWebhookService" />
            <argument type="service" id="cache.app" />
            <tag name="messenger.message_handler" />
        </service>

        <service id="Reqser\Plugin\Subscriber\ReqserLanguageSwitchSubscriber"
                class="Reqser\Plugin\Subscriber\ReqserLanguageSwitchSubscriber">
            <argument type="service" id="request_stack" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserWebhookService" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="Reqser\Plugin\Subscriber\ReqserProductReviewSubscriber"
                class="Reqser\Plugin\Subscriber\ReqserProductReviewSubscriber">
            <argument type="service" id="request_stack" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserWebhookService" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserAppService" />
            <argument type="service" id="sales_channel_domain.repository" />
            <argument type="service" id="logger"/>
            <tag name="kernel.event_subscriber" />
        </service>
        
        <service id="Reqser\Plugin\Service\ReqserNotificationService"
                class="Reqser\Plugin\Service\ReqserNotificationService">
            <argument type="service" id="notification.repository" />
        </service>

        <service id="Reqser\Plugin\Service\ReqserWebhookService">
            <argument>https://reqser.com/app/shopware/webhook/plugin</argument>
            <argument type="service" id="Shopware\Core\Framework\App\ShopId\ShopIdProvider" />
            <argument type="service" id="logger" />
        </service>

        <service id="Reqser\Plugin\Service\ReqserAppService"
                class="Reqser\Plugin\Service\ReqserAppService">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="cache.app"/>
            <argument>%kernel.environment%</argument>
        </service>

        <service id="Reqser\Plugin\Service\ReqserSessionService"
                class="Reqser\Plugin\Service\ReqserSessionService">
        </service>

        <service id="Reqser\Plugin\Service\ReqserCustomFieldService"
                class="Reqser\Plugin\Service\ReqserCustomFieldService">
            <argument type="service" id="Reqser\Plugin\Service\ReqserWebhookService" />
        </service>

        <service id="Reqser\Plugin\Service\ReqserRedirectService"
                class="Reqser\Plugin\Service\ReqserRedirectService">
            <argument type="service" id="Reqser\Plugin\Service\ReqserSessionService" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserWebhookService" />
        </service>

        <service id="Reqser\Plugin\Service\ReqserLanguageRedirectService"
                class="Reqser\Plugin\Service\ReqserLanguageRedirectService">
            <argument type="service" id="sales_channel_domain.repository" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserSessionService" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserCustomFieldService" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserRedirectService" />
            <argument type="service" id="cache.app" />
            <argument>%kernel.environment%</argument>
        </service>

        <service id="Reqser\Plugin\Subscriber\ReqserPluginVersionCheckSubscriber"
                class="Reqser\Plugin\Subscriber\ReqserPluginVersionCheckSubscriber">
            <argument type="service" id="Reqser\Plugin\Service\ReqserVersionService" />
            <argument type="service" id="translator" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="Reqser\Plugin\Service\ReqserVersionService"
                class="Reqser\Plugin\Service\ReqserVersionService">
            <argument>%kernel.shopware_version%</argument>
            <argument>%kernel.project_dir%</argument>
        </service>

        <service id="Reqser\Plugin\Subscriber\ReqserPluginUpdateSubscriber"
                class="Reqser\Plugin\Subscriber\ReqserPluginUpdateSubscriber">
            <argument type="service" id="Reqser\Plugin\Service\ReqserVersionService" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserNotificationService" />
            <argument type="service" id="translator" />
            <argument type="service" id="logger" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="Reqser\Plugin\Storefront\Controller\ReqserLanguageDetectionController" public="true">
            <argument type="service" id="Reqser\Plugin\Service\ReqserLanguageRedirectService" />
            <argument type="service" id="sales_channel_domain.repository" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserWebhookService" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserCustomFieldService" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserAppService" />
            <argument type="service" id="cache.app" />
            <argument type="service" id="logger" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

    </services>
</container>
