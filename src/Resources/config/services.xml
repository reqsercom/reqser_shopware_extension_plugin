<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Reqser\Plugin\Service\ScheduledTask\ReqserNotificiationRemoval">
            <tag name="shopware.scheduled.task" />
        </service>
        <service id="Reqser\Plugin\Service\ScheduledTask\ReqserNotificiationRemovalHandler" public="true">
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="logger"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="Reqser\Plugin\Service\ReqserNotificationService" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserWebhookService" />
            <argument type="service" id="cache.app" />
            <tag name="messenger.message_handler" />
        </service>

        <service id="Reqser\Plugin\Subscriber\ReqserLanguageSwitchSubscriber"
                class="Reqser\Plugin\Subscriber\ReqserLanguageSwitchSubscriber">
            <argument type="service" id="request_stack" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserWebhookService" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="Reqser\Plugin\Subscriber\ReqserProductReviewSubscriber"
                class="Reqser\Plugin\Subscriber\ReqserProductReviewSubscriber">
            <argument type="service" id="request_stack" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserWebhookService" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserAppService" />
            <argument type="service" id="sales_channel_domain.repository" />
            <argument type="service" id="logger"/>
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="reqser.webhook_filter.cache" class="Symfony\Component\Cache\Adapter\FilesystemAdapter">
            <argument>reqser_webhook_filter</argument>
            <argument>0</argument>
            <argument>%kernel.cache_dir%</argument>
        </service>

        <service id="Reqser\Plugin\Subscriber\ReqserEntityWebhookSubscriber"
                class="Reqser\Plugin\Subscriber\ReqserEntityWebhookSubscriber">
            <argument type="service" id="reqser.webhook_filter.cache" />
            <argument type="service" id="logger" />
            <tag name="kernel.event_subscriber" />
        </service>
        
        <service id="Reqser\Plugin\Service\ReqserNotificationService"
                class="Reqser\Plugin\Service\ReqserNotificationService">
            <argument type="service" id="notification.repository" />
        </service>

        <service id="Reqser\Plugin\Service\ReqserWebhookService">
            <argument>https://reqser.com/app/shopware/webhook/plugin</argument>
            <argument type="service" id="Shopware\Core\Framework\App\ShopId\ShopIdProvider" />
            <argument type="service" id="logger" />
        </service>

        <service id="Reqser\Plugin\Service\ReqserAppService"
                class="Reqser\Plugin\Service\ReqserAppService">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="cache.app"/>
            <argument>%kernel.environment%</argument>
            <argument type="service" id="logger"/>
        </service>

        <service id="Reqser\Plugin\Service\ReqserSessionService"
                class="Reqser\Plugin\Service\ReqserSessionService">
        </service>

        <service id="Reqser\Plugin\Service\ReqserCustomFieldService"
                class="Reqser\Plugin\Service\ReqserCustomFieldService">
            <argument type="service" id="Reqser\Plugin\Service\ReqserWebhookService" />
        </service>

        <service id="Reqser\Plugin\Service\ReqserFlagService"
                class="Reqser\Plugin\Service\ReqserFlagService">
            <argument type="service" id="kernel" />
        </service>

        <service id="Reqser\Plugin\Service\Twig\ReqserFlagExtension">
            <argument type="service" id="Reqser\Plugin\Service\ReqserFlagService" />
            <tag name="twig.extension" />
        </service>

        <service id="Reqser\Plugin\Service\ReqserLanguageRedirectService"
                class="Reqser\Plugin\Service\ReqserLanguageRedirectService">
            <argument type="service" id="sales_channel_domain.repository" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserSessionService" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserCustomFieldService" />
            <argument type="service" id="cache.app" />
            <argument>%kernel.environment%</argument>
        </service>

        <service id="Reqser\Plugin\Subscriber\ReqserPluginVersionCheckSubscriber"
                class="Reqser\Plugin\Subscriber\ReqserPluginVersionCheckSubscriber">
            <argument type="service" id="Reqser\Plugin\Service\ReqserVersionService" />
            <argument type="service" id="translator" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserNotificationService" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="Reqser\Plugin\Service\ReqserVersionService"
                class="Reqser\Plugin\Service\ReqserVersionService">
            <argument>%kernel.shopware_version%</argument>
            <argument>%kernel.project_dir%</argument>
        </service>


        <service id="Reqser\Plugin\Storefront\Controller\ReqserLanguageDetectionController" public="true">
            <argument type="service" id="Reqser\Plugin\Service\ReqserLanguageRedirectService" />
            <argument type="service" id="sales_channel_domain.repository" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserWebhookService" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserCustomFieldService" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserAppService" />
            <argument type="service" id="cache.app" />
            <argument type="service" id="logger" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <!-- API Services -->
        <service id="Reqser\Plugin\Service\ReqserApiAuthService">
            <argument type="service" id="Reqser\Plugin\Service\ReqserAppService"/>
            <argument type="service" id="logger"/>
        </service>

        <service id="Reqser\Plugin\Service\ReqserSnippetListService">
            <argument type="service" id="Shopware\Core\System\Snippet\SnippetService"/>
        </service>

        <service id="Reqser\Plugin\Service\ReqserJsonFieldDetectionService">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\DefinitionInstanceRegistry"/>
        </service>

        <service id="Reqser\Plugin\Service\ReqserDatabaseService">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\DefinitionInstanceRegistry"/>
            <argument type="service" id="Reqser\Plugin\Service\ReqserJsonFieldDetectionService"/>
        </service>

        <service id="Reqser\Plugin\Service\ReqserCmsTwigFileService">
            <argument type="service" id="service_container"/>
            <argument type="service" id="twig"/>
        </service>

        <service id="Reqser\Plugin\Service\ReqserCustomFieldUsageService">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="twig.loader.native_filesystem"/>
        </service>

        <service id="Reqser\Plugin\Service\ReqserCmsRenderService">
            <argument type="service" id="twig"/>
        </service>

        <!-- Analytics Services -->
        <service id="Reqser\Plugin\Service\ReqserAnalyticsService">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="logger"/>
        </service>

        <!-- API Controllers -->
        <service id="Reqser\Plugin\Core\Api\Controller\ReqserSnippetListApiController" public="true">
            <argument type="service" id="Reqser\Plugin\Service\ReqserSnippetListService" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserApiAuthService" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Reqser\Plugin\Core\Api\Controller\ReqserDatabaseApiController" public="true">
            <argument type="service" id="Reqser\Plugin\Service\ReqserDatabaseService" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserApiAuthService" />
            <argument type="service" id="logger" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserCustomFieldUsageService" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Reqser\Plugin\Core\Api\Controller\ReqserAnalyticsApiController" public="true">
            <argument type="service" id="Reqser\Plugin\Service\ReqserAnalyticsService" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserApiAuthService" />
            <argument type="service" id="logger" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Reqser\Plugin\Core\Api\Controller\ReqserCmsApiController" public="true">
            <argument type="service" id="Reqser\Plugin\Service\ReqserCmsTwigFileService" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserCmsRenderService" />
            <argument type="service" id="Reqser\Plugin\Service\ReqserApiAuthService" />
            <argument type="service" id="logger" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

    </services>
</container>
